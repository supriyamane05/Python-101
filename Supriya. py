
#printing maximum value of list
data1=[10,20,66,45,78,26,99]
print(max(data1))
99

#printing second largest number in a list
data1=[10,20,66,45,78,26,99]
data1.sort()
print("second largest value is",data1[-2])
second largest value is 78

#first merge two lists and sort it

a=[] 
c=[] 
n1=int(input("Enter number of elements:"))
    for i in range(1,n1+1): 
    b=int(input("Enter element:")) a.append(b)
 
n2=int(input("Enter number of elements:")) 
    for i in range(1,n2+1): 
    d=int(input("Enter element:")) c.append(d)

new=a+c 
new.sort() 
print("Sorted list is:",new)


